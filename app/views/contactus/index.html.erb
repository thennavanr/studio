<body>
  <div class="main_wrapper">
    <div class="content_wrapper">
      <div class="container">
        <div class="content_block row no-sidebar">
          <div class="fl-container ">
            <div class="row">
              <div class="posts-block ">
                <div class="page_title_block">
                  <h1 class="title">Contact Us!</h1>
                </div>                                        
                <div class="contentarea">
                  <div class="row">
                    <div class="span12 first-module module_number_1 module_cont pb35 module_text_area">
                      <div class="module_content">
                        <p> Please fill out the form below so I can assist you with your upcoming event. For more personal attention, please include your phone number.</p>
                      </div>

                      <%= flash[:notice].html_safe unless flash[:notice].blank? %>
                      <% if @contact.errors.count > 0 %>
                        <ul>
                          <% @contact.errors.full_messages.each do |e| %>
                            <div class="errors">
                              <li><%= e %></>
                            </div>
                          <% end  %>
                        </ul>
                      <% end  %>

                    </div><!-- .module_cont -->
                  </div>

                  <div class="row">
                    <div class="span9 module_number_2 module_cont pb50 module_html">
                      <div class="module_content contact_form">
                        <div id="note"></div>
                        <div id="fields"> 

                          <%= form_for @contact, :url => contactus_path , :html => {:id => 'ajax_contact-form' , :name => 'contact-form' , :method => 'post' } do |f| %>

                            <div class="w50 pr7">
                              <%= f.text_field :name, :placeholder=>"Name  *" %>
                            </div>
                            <div class="w50">
                              <%= f.text_field :email,  :placeholder=>"Email  *" %>
                            </div>
                            <div class="clear"></div>

                            <%= f.text_field :subject, :placeholder => 'Subject  *' %>
                            <%= f.text_area :message, :id=>"message", :placeholder =>'Message   *'   %>

                            <%= f.submit 'Send a message'%>

                          <%end%>

